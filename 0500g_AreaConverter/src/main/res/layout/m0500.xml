<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    android:orientation="vertical"
    android:padding="@dimen/pa01">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/m0500_t001"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/m0500_t001"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/m0500_e001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="end"
            android:hint="@string/hint"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </TableRow>

    <Button
        android:id="@+id/m0500_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Spacing"
        android:background="@android:color/holo_orange_light"
        android:gravity="center|center_vertical"
        android:text="@string/m0500_b001"

        android:textColor="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Spacing">

        <TextView
            android:id="@+id/m0500_t002"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/m0500_t002"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/m0500_t003"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:textSize="18sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/m0500_t004"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/m0500_t004"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/m0500_t006"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/m0500_t005"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/m0500_t005"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/m0500_t007"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="18sp" />
    </TableRow>

    <TextView
        android:id="@+id/myname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pa50"
        android:gravity="end"
        android:text="@string/myname"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>